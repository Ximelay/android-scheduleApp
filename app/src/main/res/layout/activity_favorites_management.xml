<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundScheduleColor"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Заголовок -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/favorites_management_title"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
            android:textColor="?attr/textColor"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp" />

        <!-- Описание -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/favorites_management_description"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="?attr/textHintColor"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp" />

        <!-- Выбор типа (Группа или Преподаватель) -->
        <RadioGroup
            android:id="@+id/radioGroupType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/tvDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/radioGroupOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/favorites_type_group"
                android:textColor="?attr/textColor"
                android:layout_marginEnd="32dp"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radioTeacherOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/favorites_type_teacher"
                android:textColor="?attr/textColor" />

        </RadioGroup>

        <!-- Контейнер для карточек выбора -->
        <FrameLayout
            android:id="@+id/cardContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/radioGroupType"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

        <!-- Карточка для выбора группы -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardGroupSelection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/cardBackgroundColor"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvCurrentFavoriteGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/favorites_no_group_selected"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="?attr/textColor"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/favorites_search_group_hint"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="?attr/textButtonHintColor"
                    app:hintTextColor="?attr/textHintColor"
                    android:textColorHint="?attr/textHintColor">

                    <AutoCompleteTextView
                        android:id="@+id/etSearchGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/textColor"
                        android:inputType="text"
                        android:padding="8dp"
                        android:textSize="16sp"
                        android:maxLines="3" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSaveGroup"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/favorites_save_button"
                        android:textColor="@color/white"
                        app:backgroundTint="?attr/textButtonHintColor"
                        app:cornerRadius="8dp"
                        android:layout_marginEnd="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnClearGroup"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/favorites_clear_button"
                        android:textColor="@color/white"
                        app:backgroundTint="@android:color/holo_red_dark"
                        app:cornerRadius="8dp"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Карточка для выбора преподавателя -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardTeacherSelection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="?attr/cardBackgroundColor"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvCurrentFavoriteTeacher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/favorites_no_teacher_selected"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="?attr/textColor"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/favorites_search_teacher_hint"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="?attr/textButtonHintColor"
                    app:hintTextColor="?attr/textHintColor"
                    android:textColorHint="?attr/textHintColor">

                    <AutoCompleteTextView
                        android:id="@+id/etSearchTeacher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/textColor"
                        android:inputType="text"
                        android:padding="8dp"
                        android:textSize="16sp"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSaveTeacher"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/favorites_save_button"
                        android:textColor="@color/white"
                        app:backgroundTint="?attr/textButtonHintColor"
                        app:cornerRadius="8dp"
                        android:layout_marginEnd="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnClearTeacher"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/favorites_clear_button"
                        android:textColor="@color/white"
                        app:backgroundTint="@android:color/holo_red_dark"
                        app:cornerRadius="8dp"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        </FrameLayout>

        <!-- Кнопка Назад -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/favorites_back_button"
            android:textColor="@color/white"
            app:backgroundTint="?attr/textButtonHintColor"
            app:cornerRadius="8dp"
            app:icon="@android:drawable/ic_menu_revert"
            app:iconTint="@color/white"
            app:layout_constraintTop_toBottomOf="@id/cardContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

